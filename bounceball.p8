pico-8 cartridge // http://www.pico-8.com
version 41
__lua__
--ball coordinates
x=54
y=54
r=4
c=11
--speed
dx=3.0
dy=2.5
function _draw()
	cls()
	--draw box
	line(10,10,10,118,5)
	line(118,10,118,118,5)
	line(10,10,118,10,5)
	line(10,118,118,118,5)
	--draw ball
	circfill(x,y,r,c)
	x+=dx
	y+=dy
	if (x+dx>118-r or x+dx<10+r) dx=-dx
	
	if (y+dy>118-r or y+dy<10+r) dy=-dy
	
end
