pico-8 cartridge // http://www.pico-8.com
version 41
__lua__
ngon=3 --number of vertices
rotspd=1/8 -- rotation speed
f=0 --frame count
c=0 --color index
clear=true --control cls()

function _update()
	if (btnp(‚¨ÖÔ∏è)) ngon-=1
	if (btnp(‚û°Ô∏è)) ngon+=1
	if (btnp(‚¨ÜÔ∏è)) rotspd+=.1
	if (btnp(‚¨áÔ∏è)) rotspd-=.1
	if (btnp(üÖæÔ∏è)) clear=true
	if (btnp(‚ùé)) clear=false
	pts={}
	for a=-1,1,1/ngon do
		add(pts,{
				x=64+32*cos(a+t()*rotspd),
				y=64+32*sin(a+t()*rotspd),
		})
	end
end

function _draw()
	if clear then
		cls()
	end	
	f+=1
	if f%8 == 0 then
		c+=1
	end
	for i=1,#pts do
		local p1,p2=pts[i],pts[i+1]
		--connect first and last point
		if (i==#pts) p2=pts[1]
		line(p1.x, p1.y, p2.x, p2.y, c%8+8)
	end	
	color() cursor()
	print("ngon "..ngon)
	print("rotspd "..rotspd)
end
	
