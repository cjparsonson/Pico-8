pico-8 cartridge // http://www.pico-8.com
version 41
__lua__
f=0 --frame
s=10 --star generation
t=100
function _init()
	cls()
end

function _draw()
	color(11) cursor()
	print("sgen="..s)
	print("t="..t)
	f+=1
	for i=1,t do		
		x=rnd(1)*279
		y=rnd(1)*191
		if f%s==0 then
			pset(x,y,7)
		else
			pset(x,y,0)
		end	
	end
end

function _update()
	if (btnp(⬆️)) then
	 s+=1
	 cls()
	end
	if (btnp(⬇️)) then
	 s-=1
	 cls()
	end
	if (btnp(⬅️)) then
		t-=100
		cls()
	end
	if (btnp(➡️)) then
		t+=100
		cls()
	end	
end

